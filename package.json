{
    "name": "tinydiary-server",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.7",
        "bcrypt": "^5.1.1",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "4.17.1",
        "helmet": "^8.0.0",
        "http-terminator": "^3.2.0",
        "jsonwebtoken": "^9.0.2",
        "luxon": "^3.5.0",
        "monarch-orm": "^0.5.3",
        "zod": "^3.23.8"
    },
    "scripts": {
        "start": "node ./build/server.js",
        "build": "tsc",
        "dev": "nodemon ./src/server.ts",
        "seed": "ts-node ./scripts/seed-db.ts",
        "typecheck": "tsc --noEmit",
        "lint": "npm run format && eslint ./src/**/**/*.ts --fix",
        "format": "prettier --config .prettierrc --write .",
        "format:check": "prettier --config .prettierrc . --check",
        "test:watch": "vitest",
        "test": "vitest run",
        "clean": "rm -rf node_modules build logs .env.development database.sqlite3 .nyc_output coverage",
        "prepare-zip": "npm run clean"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.11.1",
        "@faker-js/faker": "^9.0.3",
        "@tsconfig/node20": "^20.1.4",
        "@types/bcrypt": "^5.0.2",
        "@types/body-parser": "^1.19.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/luxon": "^3.4.2",
        "@types/node": "^22.7.4",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.7.0",
        "@typescript-eslint/parser": "^8.7.0",
        "concurrently": "^8.0.1",
        "eslint": "^9.11.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.6",
        "nodemon": "^2.0.22",
        "prettier": "^3.3.3",
        "pretty-quick": "^4.0.0",
        "supertest": "^7.0.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "5.5",
        "typescript-transform-paths": "^3.5.1",
        "vitest": "^2.1.1"
    },
    "engines": {
        "node": ">=10.16.3"
    },
    "engineStrict": true
}